# UpNext Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ====================
# REQUIRED SETTINGS
# ====================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database - MongoDB Connection
# Local: mongodb://localhost:27017/upnext
# Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/upnext
MONGODB_URI=mongodb://localhost:27017/upnext

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# JWT Secret (generate a random string)
JWT_SECRET=your_secure_random_jwt_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ====================
# OPTIONAL INTEGRATIONS
# ====================

# GitHub OAuth (for project scaffolding)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# LinkedIn OAuth (for profile import)
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Google Calendar API (for scheduling)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twilio (for SMS notifications)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Firebase (for push notifications)
# FIREBASE_PROJECT_ID=your_firebase_project_id
